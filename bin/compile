#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# config
APACHE_VERSION="2.2.22"
APACHE_PATH="apache"
PHP_VERSION="5.3.10"
PHP_PATH="php"

NEWRELIC_VERSION=3.2.5.147
NEWRELIC_FILE="newrelic-${NEWRELIC_VERSION}-heroku.tar.gz"

S3_BUCKET=dp-heroku
S3_URL="https://s3.amazonaws.com/${S3_BUCKET}"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

# move app things to www
mkdir -p $CACHE_DIR/www
mv * $CACHE_DIR/www
mv $CACHE_DIR/www .

# keep Procfile
if [ -f www/Procfile ]; then
  mv www/Procfile .
fi

APACHE_URL="https://s3.amazonaws.com/php-lp/apache-$APACHE_VERSION.tar.gz"
echo "-----> Bundling Apache version $APACHE_VERSION"
curl --silent --max-time 60 --location "$APACHE_URL" | tar xz

PHP_URL="https://s3.amazonaws.com/php-lp/php-$PHP_VERSION.tar.gz"
echo "-----> Bundling PHP version $PHP_VERSION"
curl --silent --max-time 60 --location "$PHP_URL" | tar xz

# update config files
cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
cp $LP_DIR/conf/php.ini php

# make php available on bin
mkdir -p bin
ln -s /app/php/bin/php bin/php


# newrelic
# echo "-----> Installing newrelic"
NEWRELIC_URL="${S3_URL}/${NEWRELIC_FILE}"
echo "Bundling newrelic daemon v${NEWRELIC_VERSION}"
echo ${NEWRELIC_URL}
curl --silent --max-time 60 --location "${NEWRELIC_URL}" | tar xz

# fi
if [ -f /app/newrelic/NEWRELIC_VERSION ]; then

# link /app/newrelic/x64/newrelic-20090626.so
	MODULEDIR=/app/php/ext
	ARCH=x64
	PHPAPI=20090626
	PHPZTS=""
	rm -f $MODULEDIR/newrelic.so
	ln -s /app/newrelic/x64/newrelic-${PHPAPI}${PHPZTS}.so ${MODULEDIR}/newrelic.so

#cat >>/app/www/00_newrelic_default.ini <<EOF
#EOF

cat >/app/conf/newrelic.cfg <<EOF
pidfile=/app/newrelic/newrelic-daemon.pid
logfile=/app/newrelic/newrelic-daemon.log
ssl=true
EOF
/app/bin/newrelic-daemon -c /app/conf/newrelic.cfg

#	sed -i "s|REPLACE_WITH_REAL_KEY|${NEW_RELIC_LICENSE_KEY}|g" /app/www/*newrelic*.ini
	# Deploy agent
#	cp -f /app/local/newrelic/agent/x64/newrelic-`/app/vendor/php/bin/phpize --version | grep "Zend Module Api No" | tr -d ' ' | cut -f 2 -d ':'`.so `/app/vendor/php/bin/php-config --extension-dir`/newrelic.so
#	rm -Rf /app/local/newrelic/agent/
# else
# 	sed -i "s|REPLACE_WITH_REAL_KEY|${NEW_RELIC_LICENSE_KEY}|g" /app/local/etc/newrelic.cfg
fi


# output boot.sh
cat >>boot.sh <<EOF
for var in \`env|cut -f1 -d=\`; do
  echo "PassEnv \$var" >> /app/apache/conf/httpd.conf;
done
touch /app/apache/logs/error_log
touch /app/apache/logs/access_log
tail -F /app/apache/logs/error_log &
tail -F /app/apache/logs/access_log &
export LD_LIBRARY_PATH=/app/php/ext
export PHP_INI_SCAN_DIR=/app/www
echo "Launching apache"
exec /app/apache/bin/httpd -DNO_DETACH
EOF

chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR
